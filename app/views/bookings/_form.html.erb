<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-8 col-lg-6 mx-auto">
      <div class="bg-white rounded p-4 shadow-sm">
        <%= simple_form_for [@place, @booking] do |f| %>
          <div class="form-group">
            <%= f.input :checkin, as: :string, input_html: { class: 'form-control', data: { controller: "flatpickr" } }, label: false, placeholder: 'Check-in Date' %>
          </div>
          <div class="form-group">
            <%= f.input :checkout, as: :string, input_html: { class: 'form-control', data: { controller: "flatpickr" } }, label: false, placeholder: 'Check-out Date' %>
          </div>
          <div class="form-group text-center">
            <%= f.submit "Book", class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
