<h1>My Places</h1>

<% @places.each do |place| %>
  <div>
    <h2><%= place.name %></h2>
    <p><%= place.description %></p>
    <p><strong>Location: </strong> <%= place.location %></p>
    <p><strong>Price: </strong> <%= place.price %></p>
    <p><%= link_to "Edit", edit_place_path(place) %></p>
  </div>
  <hr>
<% end %>
