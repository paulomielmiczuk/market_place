<div class="bg-white rounded p-4 shadow-sm">
  <%= simple_form_for @place do |f| %>
    <div class="form-group">
      <%= f.input :name, label: false, placeholder: 'Name', input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group">
      <%= f.input :description, label: false, as: :text, placeholder: 'Description', input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group">
      <%= f.input :location, label: false, placeholder: 'Location', input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group">
      <%= f.input :price, label: false, as: :float, placeholder: 'Price', input_html: { class: 'form-control' } %>
    </div>
    <% if @place.new_record? %>
      <div class="form-group">
        <%= f.input :photo, label: false, as: :file, input_html: { class: 'form-control-file' } %>
      </div>
    <% end %>
    <div class="form-group text-center">
      <%= f.button :submit, @place.new_record? ? "Create Place" : "Confirm", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
