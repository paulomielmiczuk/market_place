<h1>All places</h1>

<% if @places.any? %>
  <% @places.each do |place| %>
    <p>Name: <%= place.name %></p>
    <p>Location: <%= place.location %></p>
    <p>Description: <%= place.description %></p>
    <p>Price: <%= place.price %></p>
    <p>Rating: <%= place.rating %></p>
    <%= link_to "View place", place_path(place) %>
  <% end %>
<% else %>
  <p>Sorry, no places found!</p>
<% end %>
