<div class="d-flex justify-content-between align-items-baseline mb-3">
  <div>
    <h1>All places</h1>
  </div>
  <div>
    <%= link_to 'My places', my_places_path, class: 'btn btn-sm btn-primary rounded' %>
    <%= link_to 'Add new place', new_place_path, class: 'btn btn-sm btn-primary rounded' %>
  </div>
</div>
<% if @places.any? %>
  <div class="flexbox">
    <% @places.each do |place| %>
      <div class="card-trip">
        <%= cl_image_tag(place.photo.key, crop: :fill) %>
        <div class="card-trip-infos">
          <div>
            <h2><%= place.name %></h2>
            <p>Rating: <%= place.rating %></p>
            <p><%= link_to "View", place_path(place) %></p>
          </div>
          <h2 class="card-trip-pricing">$<%= place.price %></h2>
        </div>
      </div>
    <% end %>
  </div>

<% else %>
  <p>Sorry, no places found!</p>
<% end %>
