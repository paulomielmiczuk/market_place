<h1>All places</h1>

<% if @places.any? %>
  <div class="flexbox">
    <% @places.each do |place| %>
      <div class="card-trip">
        <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg", alt: " " %>
        <div class="card-trip-infos">
          <div>
            <h2><%= place.name %></h2>
            <p>Rating: <%= place.rating %></p>
            <p><%= link_to "View", place_path(place) %></p>
          </div>
          <h2 class="card-trip-pricing">$<%= place.price %></h2>
        </div>
      </div>
    <% end %>
  </div>

<% else %>
  <p>Sorry, no places found!</p>
<% end %>
