<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @place.photo.key, height: 300, crop: :fill %>')">
  <div class="container">
    <h1 class="text-center"><%= @place.name %></h1>
  </div>
</div>
<div class='d-flex my-3 justify-content-between'>
  <div>
    <%= link_to "Book place", new_place_booking_path(@place), class: 'btn btn-primary' %>
  </div>
  <div>
    <%= link_to "Edit place", edit_place_path(@place), class: 'btn btn-sm btn-outline-warning rounded' %>
    <%= link_to "Remove place", place_path(@place), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: 'btn btn-sm btn-outline-danger rounded' %>
  </div>
</div>

<p>Location: <%= @place.location %></p>
<p>Description: <%= @place.description %></p>
<p>Price: <%= @place.price %></p>
<p>Host: <%= @place.user.name %></p>
<p>Rating: <%= @place.rating %></p>

<%= link_to 'Back to places', places_path, class: 'btn btn-sm btn-outline-primary rounded' %>
